{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDirs": ["./", "./src"],
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "types": ["node"],
    "outDir": "./dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
